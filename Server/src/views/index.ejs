<%- include('partials/header') -%>
  <header class="d-flex justify-content-center">
      
  <h1>
        FORO MULTITEMATICO
      </h1>

  </header>
  <!-- columnas -->
  <main class="d-flex flex-column align-items-center mb-3">
    <button type="button" class="btn btn-primary" id="btn-new">Nueva Entrada</button>

    <div class="container text-center">
      <div class="row" id="container">
        <% foro.forEach(foro=> { %>


          <div class="col-4 d-flex justify-content-center mb-3" data-id="<%= foro.id %>">
            <div class="card" style="width: 18rem;">
              <img src="<%= foro.poster %>" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title"></h5>
                <%= foro.title %>
                  </h5>
                  <p class="card-text"><%= foro.description %></p>

                  <p class="card-text">Fecha de creaci√≥n: <%= new Date(foro.createdAt).toLocaleString() %>

              
                    
                    <button class="btn btn-primary" id="btn-edit">Editar </button>
                    <button type="" class="btn btn-primary" id="btn-delete"> Borrar </button>
              </div>
            </div>
          </div>
      </div>

      <% }) %>


        <div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">FORO MULTITEMATICO</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <form id="formulario">
                  <div class="mb-3">
                    <label for="ImputTitle" class="col-form-label">Titulo:</label>
                    <input type="text" class="form-control" id="imputTitle">
                  </div>
                  <div class="mb-3">
                    <label for="imputDescription" class="col-form-label">Publicacion:</label>
                    <input type="text" class="form-control" id="imputDescription">
                  </div>
                  <div class="mb-3">
                    <label for="imputPoster" class="col-form-label">URL:</label>
                    <input type="text" class="form-control" id="imputPoster">
                  </div>
                  <div class="modal-footer">
                    <button class="button" type="button" class="btn btn-secondary" data-bs-dismiss="modal"> Cerrar
                    </button>
                    <button class="button" type="submit" class="btn btn-primary" id="btn-save"></button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
    </div>
  </main>

  <%- include('partials/footer') -%>